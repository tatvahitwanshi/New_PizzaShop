@model DataAccessLayer.ViewModels.AddUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
    ViewData["Title"] = "Edit New User";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/userlist.css">
</head>

<body>
    <div class="container-fluid p-4">
        <div class="row ">
            <div class="col-lg-4 col-sm-12 h2 fw-bold" style="color: #0066A7;">
                Edit User
            </div>
            <div class="col-lg-8 col-sm-12">
                <div class="row" style="float: right;">
                    <div class="col">
                        <form class="d-flex " role="search">
                            <a class="btn " style="border-color: #0066A7; color: #0066A7; text-decoration: none;"
                                href="user.html" type="submit"><i class="bi bi-chevron-left"></i>Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-3 bg-white"
            style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
            <div class="col">
                <div class="container-fluid">
                    <div class="row mt-3">
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">First Name</label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Last Name</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <div class=" form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Username</label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class=" form-floating mb-3">
                                <select class="form-select mb-3" aria-label="Default select example">
                                    <option selected>Select All</option>
                                    <option value="1">Chef</option>
                                    <option value="2">Super admin</option>
                                    <option value="3">Account Manager</option>
                                </select>
                                <label for="floatingSelect">Role</label>
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="email" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Email</label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class=" form-floating mb-3">
                                <select class="form-select mb-3" aria-label="Default select example">
                                    <option selected>Active</option>
                                    <option value="1">Unactive</option>
                                </select>
                                <label for="floatingSelect">Status</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex justify-content-center  mb-3">
                            <label for="fileUpload" class="btn w-100 p-4"
                                style=" border: 2px solid rgba(112, 128, 144, 0.123); border-style: dashed; ">
                                <i class="bi bi-cloud-arrow-up h3"></i><br>Browse File
                                <input type="file" id="fileUpload" class="d-none">
                        </div>
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            <div class=" form-floating mb-3">
                                <select class="form-select mb-3" aria-label="Default select example">
                                    <option selected>Select Country</option>
                                    <option value="1">Chef</option>
                                    <option value="2">Super admin</option>
                                    <option value="3">Account Manager</option>
                                </select>
                                <label for="floatingSelect">Country</label>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class=" form-floating mb-3">
                                <select class="form-select mb-3" aria-label="Default select example">
                                    <option selected>Select State</option>
                                    <option value="1">Chef</option>
                                    <option value="2">Super admin</option>
                                    <option value="3">Account Manager</option>
                                </select>
                                <label for="floatingSelect">State</label>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class=" form-floating mb-3">
                                <select class="form-select mb-3" aria-label="Default select example">
                                    <option selected>Select City</option>
                                    <option value="1">Chef</option>
                                    <option value="2">Super admin</option>
                                    <option value="3">Account Manager</option>
                                </select>
                                <label for="floatingSelect">City</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="text" pattern="[0-9]{5}" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Zip Code</label>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Address</label>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-floating mb-3">
                                <input type="tel" class="form-control" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Phone</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-3">
                            <button class="btn text-white " style="background-color: #0066A7;" type="submit">Update
                                User</button>
                            <button class="btn " style="border-color: #0066A7; color: #0066A7;"
                                type="submit">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
