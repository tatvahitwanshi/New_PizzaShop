@model IEnumerable<DataAccessLayer.ViewModels.RoleViewModel>

@{
    Layout = "~/Views/Shared/_LayoutCustom.cshtml";
    ViewData["Title"] = " Role Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    
</head>

<body>
    <div class="container-fluid p-4 ms-5 w-75 mt-5" >
        <div class="row bg-white role-block">
            <div class="col p-5">
                <div class="table responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Role</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Rolename</td>
                                    <td>
                                        <a asp-action="PermissionView" asp-controller="RolesAndPermission" style="text-decoration: none;">
                                            <button style="border: none; background-color: white;">
                                                <i class="bi bi-pen"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
