<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/navbar.css">
    <title>Document</title>
</head>

<body>
    <!-- Navbar  -->
    <nav class="d-flex justify-content-between align-items-center px-2 ps-lg-0 py-lg-0 m-0 navbar">
        <img src="~/images/logos/sidebar-2.png" alt="" id="sidebar-logo"
            class="d-lg-none bg-white border rounded d-flex " data-bs-toggle="offcanvas" href="#offcanvasExample"
            role="button" aria-controls="offcanvasExample">
        <div class="d-flex company-logo  m-0 justify-content-center border-lg-rounded align-items-center ">
            <img src="~/images/logos/pizzashop_logo.png" alt="company-logo" id="company-logo-img"
                class="d-none d-lg-flex">
            <div class="h3 ps-3" id="company-name">PIZZASHOP</div>
            

        </div>
        <div class="btn-group dropstart">
            <a class=" dropdown-toggle  dropdown-toggle-split" href="#" role="button" id="dropdownMenuLink"
                data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none;">
                <img src="~/images/Default_pfp.svg.png" alt="" id="profile-pic">
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li><a class="dropdown-item"></i>@ViewData["UserName"]</a></li>
                <li><a class="dropdown-item" asp-action="UserProfileView" asp-controller="UserProfile"><i
                            class="bi bi-person-circle p-2"></i>My Profile</a></li>
                <li><a class="dropdown-item" asp-action="ChangePasswordView" asp-controller="UserProfile"><i
                            class="bi bi-arrow-clockwise p-2"></i>Change Password</a></li>
                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#staticBackdrop"><i
                            class="bi bi-box-arrow-right p-2"></i>Logout</a></li>
            </ul>
        </div>
    </nav>

</body>

</html>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">

                <div class="modal-body ">
                    <div class="d-flex justify-content-center ">
                        <img src="~/images/toppng.com-warning-icon-2400x2400.png" alt=""
                            style="width: 10%; height: 10%;">
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <span class="text-muted">Are you sure you want Logout ?</span>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button class="btn text-white" style="background-color: #0066A7;" type="submit" id="loginbtn">Yes</button>
                        <button class="btn ms-2" style="border-color: #0066A7; color: #0066A7;" type="submit"
                            data-bs-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    document.getElementById("loginbtn").addEventListener("click", function () {
        console.log("Logout")
        window.location.href = "@Url.Action("Logout", "Login")";
    });
</script>